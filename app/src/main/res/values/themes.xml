<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QRRegistry" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="statusBarBackground">#8F8F8F</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/statusBarBackground</item>
        <!-- Customize your theme here. -->
    </style>


    <!--- Menu Style -->
    <style name="navtheme">
        <!-- Text Color -->
        <item name="colorPrimary">@color/teal_200</item>
        <!-- Background Color -->
        <item name="colorControlHighlight">@color/purple_500</item>
        <item name="sizePercent">25</item>
    </style>


</resources>