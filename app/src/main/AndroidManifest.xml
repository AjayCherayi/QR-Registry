        <activity android:name=".CustomerLoginSignUp.UserPhoneNumberVerification" android:screenOrientation="portrait"/>
        <activity android:name=".ShopLoginSignUp.ShopSignUp" android:screenOrientation="portrait"/>
        <activity android:name=".ShopLoginSignUp.ShopLogin" android:screenOrientation="portrait"/>
        <activity android:name=".CustomerLoginSignUp.UserSignUp" android:screenOrientation="portrait"/>
        <activity android:name=".CustomerLoginSignUp.UserLogin" android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".QRCodeScanner"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>