<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    android:background="@color/Primary"
    tools:context=".ShopLoginSignUp.ShopSignUp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <ImageView
           android:id="@+id/btn_backToCd"
           android:layout_width="40dp"
           android:layout_height="40dp"
           android:background="?attr/selectableItemBackgroundBorderless"
           android:clickable="true"
           android:layout_marginLeft="25dp"
           android:src="@drawable/back_arrow"
           android:layout_marginTop="25dp"
           android:layout_marginBottom="10dp"
           app:tint="@color/black"
           android:contentDescription="@null"
           android:focusable="true"
           android:layout_marginStart="25dp" />

       <ImageView
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:src="@drawable/shop_sign_up"
           android:layout_gravity="center"
           android:layout_marginTop="-40dp"
           android:contentDescription="@null" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:text="@string/SignUpWith"
           android:textSize="20sp"
           android:textColor="@color/white"
           android:layout_gravity="center" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           android:text="@string/app_name"
           android:textAllCaps="true"
           android:textStyle="bold"
           android:textSize="35sp"
           android:textColor="@color/white"
           android:layout_gravity="center"
           android:layout_marginBottom="10dp"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:background="@drawable/bg_lower"
           android:layout_marginTop="20dp"
           android:layout_marginHorizontal="15dp"
           android:paddingHorizontal="15dp"
           android:paddingTop="20dp">

           <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:id="@+id/et_shopName"
                   android:hint="@string/shopName"
                   android:textColorHint="@color/black"
                   app:boxStrokeColor="@color/black"
                   app:boxStrokeWidth="2dp"
                   app:endIconMode="clear_text"
                   app:endIconTint="@color/black"
                   app:hintTextColor="@color/black"
                   app:startIconDrawable="@drawable/ic_shop"
                   app:startIconTint="@color/black">

                   <com.google.android.material.textfield.TextInputEditText
                       android:layout_width="match_parent"
                       android:layout_height="55dp"
                       android:textSize="20sp"
                       android:digits="@string/allowedName"
                       android:inputType="text"
                       android:textColor="@color/black"/>
               </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:id="@+id/et_category"
                   android:hint="@string/category"
                   android:textColorHint="@color/black"
                   app:boxStrokeColor="@color/black"
                   app:boxStrokeWidth="2dp"
                   android:layout_marginTop="8dp"
                   app:endIconMode="clear_text"
                   app:endIconTint="@color/black"
                   app:hintTextColor="@color/black"
                   app:startIconDrawable="@drawable/ic_category"
                   app:startIconTint="@color/black">

                   <com.google.android.material.textfield.TextInputEditText
                       android:layout_width="match_parent"
                       android:layout_height="55dp"
                       android:textSize="20sp"
                       android:inputType="text"
                       android:textColor="@color/black"/>
               </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:id="@+id/et_shopLocation"
                   android:hint="@string/shopLocation"
                   android:textColorHint="@color/black"
                   app:boxStrokeColor="@color/black"
                   app:boxStrokeWidth="2dp"
                   android:layout_marginTop="8dp"
                   app:endIconMode="clear_text"
                   app:endIconTint="@color/black"
                   app:hintTextColor="@color/black"
                   app:startIconDrawable="@drawable/ic_location"
                   app:startIconTint="@color/black">

                   <com.google.android.material.textfield.TextInputEditText
                       android:layout_width="match_parent"
                       android:layout_height="55dp"
                       android:textSize="20sp"
                       android:inputType="text"
                       android:textColor="@color/black"/>
               </com.google.android.material.textfield.TextInputLayout>

           <View
                   android:layout_width="match_parent"
                   android:layout_height="2dp"
                   android:background="@color/Primary"
                   android:layout_marginTop="15dp"/>

           <com.google.android.material.textfield.TextInputLayout
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:id="@+id/et_ownerName"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="8dp"
                   android:hint="@string/ownerName"
                   android:textColorHint="@color/black"
                   app:boxStrokeColor="@color/black"
                   app:boxStrokeWidth="2dp"
                   app:endIconMode="clear_text"
                   app:endIconTint="@color/black"
                   app:hintTextColor="@color/black"
                   app:startIconDrawable="@drawable/ic_customer"
                   app:startIconTint="@color/black">

                   <com.google.android.material.textfield.TextInputEditText
                       android:layout_width="match_parent"
                       android:layout_height="55dp"
                       android:inputType="text"
                       android:textColor="@color/black"
                       android:textSize="20sp" />

               </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:id="@+id/et_phone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   android:hint="@string/ownerPhone"
                   android:textColorHint="@color/black"
                   app:boxStrokeColor="@color/black"
                   app:boxStrokeWidth="2dp"
                   app:endIconMode="clear_text"
                   app:endIconTint="@color/black"
                   app:hintTextColor="@color/black"
                   app:startIconDrawable="@drawable/ic_phone"
                   app:startIconTint="@color/black">

                   <com.google.android.material.textfield.TextInputEditText
                       android:layout_width="match_parent"
                       android:layout_height="55dp"
                       android:inputType="phone"
                       android:textColor="@color/black"
                       android:textSize="20sp" />

               </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.textfield.TextInputLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                   android:id="@+id/et_shopPassword"
                   android:hint="@string/shopPassword"
                   android:textColorHint="@color/black"
                   app:boxStrokeColor="@color/black"
                   app:boxStrokeWidth="2dp"
                   android:layout_marginTop="8dp"
                   app:endIconMode="password_toggle"
                   app:endIconTint="@color/black"
                   app:hintTextColor="@color/black"
                   app:startIconDrawable="@drawable/ic_lock"
                   app:startIconTint="@color/black">

                   <com.google.android.material.textfield.TextInputEditText
                       android:layout_width="match_parent"
                       android:layout_height="55dp"
                       android:textSize="20sp"
                       android:inputType="textPassword"
                       android:textColor="@color/black"/>
               </com.google.android.material.textfield.TextInputLayout>

           <com.google.android.material.button.MaterialButton
                   android:id="@+id/btn_getOtp"
                   android:layout_width="345dp"
                   android:layout_height="60dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="10dp"
                   android:fontFamily="@font/astronaut"
                   android:gravity="center"
                   android:backgroundTint="@color/Primary"
                   app:cornerRadius="5dp"
                   android:text="@string/getOtp"
                   android:textColor="@color/white"
                   android:textSize="25sp"
                   android:transitionName="transition_signUp"
                   tools:targetApi="lollipop" />

           <com.google.android.material.button.MaterialButton
                   android:layout_width="345dp"
                   android:layout_height="60dp"
                   android:layout_gravity="center"
                   android:layout_marginBottom="10dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginRight="20dp"
                   android:fontFamily="@font/astronaut"
                   android:gravity="center"
                   android:onClick="ToLogin"
                   android:backgroundTint="@color/white"
                   app:strokeColor="@color/Primary"
                   app:strokeWidth="2dp"
                   app:cornerRadius="5dp"
                   android:text="@string/login"
                   android:textColor="@color/Primary"
                   android:textSize="25sp"
                   android:transitionName="transition_signUp"
                   tools:targetApi="lollipop" />
       </LinearLayout>
   </LinearLayout>

</ScrollView>