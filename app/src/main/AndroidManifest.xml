        <activity android:name=".ToDoList.UserToDoList" android:screenOrientation="portrait"/>
        <activity android:name=".CustomerLoginSignUp.FindShops" android:screenOrientation="portrait"/>
        <activity android:name=".ShopLoginSignUp.AllCustomers" android:screenOrientation="portrait"/>
        <activity android:name=".ShopLoginSignUp.TodayCustomers" android:screenOrientation="portrait"/>
