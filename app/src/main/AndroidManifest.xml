        <activity android:name=".ShopLoginSignUp.ShopQRCode" android:screenOrientation="portrait"/>
        <activity android:name=".ShopLoginSignUp.ShopDashBoard" android:screenOrientation="portrait"/>
        <activity android:name=".CustomerLoginSignUp.UserQrCode" android:screenOrientation="portrait"/>
