<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerLoginSignUp.UserDashBoard"
    tools:openDrawer="start"
    android:id="@+id/drawer_layout"
    android:background="@color/Primary"
    android:fitsSystemWindows="true">


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/navTheme"
        android:background="@drawable/bg_white"
        android:layout_gravity="start"
        app:menu="@menu/main_menu"
        app:itemTextColor="@color/black"
        app:itemIconSize="35dp"
        android:clickable="true"
        app:itemHorizontalPadding="20dp"
        app:itemIconPadding="15dp"
        app:itemIconTint="@color/black"
        android:focusable="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:id="@+id/linear_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bg_primary"
            android:padding="20dp">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/user"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/get_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/drawer_btn"
                android:layout_width="63dp"
                android:layout_height="49dp"
                app:lottie_autoPlay="true"
                app:lottie_rawRes="@raw/drawer_menu1" />


        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="-70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="10dp"
                android:onClick="generateQR"
                android:backgroundTint="@color/Primary_ExtraLight">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_user">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_qr_code2"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:text="@string/myQr"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@font/my_fav_sans_number"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textSize="25sp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:onClick="scanQR"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="10dp"
                android:backgroundTint="@color/Primary_ExtraLight">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_user">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_qr_code_scan1"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:text="@string/scanCode"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@font/my_fav_sans_number"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textSize="25sp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView

                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="10dp"
                android:onClick="ScannedShops"
                android:backgroundTint="@color/Primary_ExtraLight">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_user">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/shop"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:text="@string/scannedShop"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@font/my_fav_sans_number"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textSize="25sp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView

                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:cardElevation="10dp"
                android:onClick="mapFind"
                android:backgroundTint="@color/Primary_ExtraLight">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_user">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_shop_location"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:text="@string/findShops"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@font/my_fav_sans_number"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textSize="25sp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView

                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:onClick="TodoList"
                app:cardElevation="10dp"
                android:backgroundTint="@color/Primary_ExtraLight">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_user">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/todo"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:text="@string/todoList"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@font/my_fav_sans_number"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textSize="25sp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView

                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:onClick="CustomerProfile"
                app:cardElevation="10dp"
                android:backgroundTint="@color/Primary_ExtraLight">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_card_user">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_edit_profile"
                        android:contentDescription="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:text="@string/editProfile"
                        android:textStyle="bold"
                        android:fontFamily="@font/my_fav_sans_number"
                        style="@android:style/TextAppearance.DeviceDefault.Medium"
                        android:textColor="@color/white"
                        android:textSize="25sp" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>